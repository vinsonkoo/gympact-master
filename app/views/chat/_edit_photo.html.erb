
	<% if true %>
	<% # if in editing mode %>
	<div class="form-row name container-fluid">
		<label class="col-md-1">
			<span class="glyphicon glyphicon-user"></span>
			</label>
		<span class="input col-md-10">
			Cynthia Koo
		</span>
		<span class="input col-md-1 input">
			<span class="edit-workout glyphicon glyphicon-pencil"></span>
		</span>
	</div>

	<div class="form-row date container-fluid">
		<label class="col-md-1">
			<span class="glyphicon glyphicon-calendar"></span>
		</label>
		<span class="input col-md-11">
			April 2, 2014 at 5:20PM
		</span>
	</div>

	<div class="form-row workout_tags container-fluid">
		<label class="col-md-1">
			<span class="glyphicon glyphicon-tags"></span>
