- if params[:controller] == "pacts" && params[:action] == "new"
  - step = 1
- elsif params[:controller] == "pacts" && params[:action] == "add_users"
  - step = 2
- elsif params[:controller] == "pacts" && params[:action] == "add_goals"
  - step = 3
- elsif params[:controller] == "pacts" && params[:action] == "add_penalties"
  - step = 4

.steps
  - if step == 1
    = link_to new_pact_path, class: "steps-step steps-step-active" do
      .steps-step-number Step 1
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Create a new pact
  - elsif step > 1
    = link_to pact_path, class: "steps-step steps-step-done" do
      .steps-step-number Step 1
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Pact created
  - else
    = link_to pact_path, class: "steps-step" do
      .steps-step-number Step 1
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Create a new pact

  - if step == 2
    = link_to add_users_path, class: "steps-step steps-step-active" do
      .steps-step-number Step 2
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add users
  - elsif step > 2
    = link_to add_users_path, class: "steps-step steps-step-done" do
      .steps-step-number Step 2
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add users
  - else
    .steps-step
      .steps-step-number Step 2
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add users

  - if step == 3
    = link_to add_goals_path, class: "steps-step steps-step-active" do
      .steps-step-number Step 3
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add goals
  - elsif step > 3
    = link_to add_goals_path, class: "steps-step steps-step-done" do
      .steps-step-number Step 3
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add goals
  - else
    .steps-step
      .steps-step-number Step 3
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add goals


  - if step == 4
    = link_to add_penalties_path, class: "steps-step steps-step-active" do
      .steps-step-number Step 4
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add penalties
  - elsif step > 4
    = link_to add_penalties_path, class: "steps-step steps-step-done" do
      .steps-step-number Step 4
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add penalties
  - else
    .steps-step
      .steps-step-number Step 4
      .steps-step-circle
        .steps-step-circle-img
      .steps-step-label Add penalties