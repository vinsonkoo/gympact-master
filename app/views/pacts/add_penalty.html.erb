<h3>Add Penalties To <%= @pact.pact_name %></h3>

<%= form_for @pact do |f| %>

  <% if @pact.errors.any? %>
    <div class="error_explanation">
      <h2><%=pluralize(@pact.errors.count, "error") %> prohibited this pact from being saved.</h2>
      <ul>
        <% @pact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-3">
    <%= f.label :penalty, 'Penalty' %>
    <%= f.number_field :penalty, min: 0, :step => 'any', :precisions => 2 %>
  </div>

  <%= f.submit :class => "btn" %>

<% end %>