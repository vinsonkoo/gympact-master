<h3>Add Penalties To <%= @pact.pact_name %></h3>

<%= form_for setup_pact(@pact) do |f| %>

  <% if @pact.errors.any? %>
    <div class="error_explanation">
      <h2><%=pluralize(@pact.errors.count, "error") %> prohibited this pact from being saved.</h2>
      <ul>
        <% @pact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%
=begin
%>  
  <div class="col-md-4">
    <% (1..7).each do |n| %>
      <%= f.label :goal_days, 'Goal Days' %>
      <%= f.number_field :goal_days, min: 0, max: 7, :value => n %>
      <%= f.label :penalty, 'Penalty' %>
      <%= f.number_field :penalty, min: 0, :step => 'any', :precisions => 2 %>
    <% end %>
    <%= f.submit :class => "btn" %>

    <%= f.fields_for :penalty do |penalty_fields| %>
      <%= penalty_fields.label :goal_days, 'Goal Days' %>
      <%= penalty_fields.number_field :goal_days %>
      <br />
      <%= penalty_fields.label :penalty, 'Penalty' %>
      <%= penalty_fields.number_field :penalty,  min: 0, max: 9, :step => 'any', :precisions => 2 %>
      <%= f.submit :class => "btn" %>
    <% end %>
<%
=end %>

  <%= f.fields_for :penalties do |ff| %>

    <%= ff.label :goal_days, 'Goal Days' %>
    <%= ff.number_field :goal_days %>
    <br />
    <%= ff.label :penalty, 'Penalty' %>
    <%= ff.number_field :penalty %>
    <%= ff.hidden_field :pact_id, :value => @pact.id %>
  <% end %>
  <%= f.submit :class => "btn" %>
  <!-- </div> -->

<% end %>

