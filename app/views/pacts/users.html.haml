= render partial: 'partials/pact_menu'


.content
  %h2= link_to "Edit users", add_users_path(@pact)
  - if @users
    %table
      %thead
        %tr
          %th.border-right{rowspan: 2} Name
          %th.border-right{colspan: 4} Workouts
          %th{colspan: 3} Penalty
        %tr 
          %th Goal Days
          %th Workouts
          %th Missed
          %th.border-right Bonus Days
          %th Owed
          %th Paid
          %th Total
      %tbody
        -@users.each do |user|
          %tr
            %td.border-right= user.username
            %td.border-right
            %td
            %td
            %td.border-right
            %td
            %td.border-right
            %td
      %tfoot
        %tr
          %td.border-right Total
          %td @pact.goals(:goal).sum :goal
          %td
          %td
          %td.border-right
          %td
          %td.border-right
          %td