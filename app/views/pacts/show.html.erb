
<h3><%= link_to 'New Pact', new_pact_path %></h3>

<h1><%= @pact.pact_name %></h1>
  <table>
    <thead>
      <tr>
        <th>Pact ID</th>
        <th>Pact Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Is Active?</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @pact.id %></td>
        <td><%= @pact.pact_name %></td>
        <td><%= @pact.start_date %></td>
        <td><%= @pact.end_date %></td>
        <td><%= @pact.is_active %></td>
      </tr>
    </tbody>
  </table>
  
  <table>
    <thead>
      <tr>
        <th>Week ID</th>
        <th>Week Number</th>
        <th>Week Start Date</th>
        <th>Week End Date</th>
        <th>Pact ID</th>
      </tr>
    </thead>
    <tbody>
      <% for week in Week.where(pact_id: @pact.id) %>
        <tr>
          <td class="week-id"><%= week.id %></td>
          <td class="week-week-number"><%= week.week_number %></td>
          <td class="week-start"><%= week.start_date %></td>
          <td class="week-end"><%= week.end_date %></td>
          <td class="week-pact-id"><%= week.pact_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table>
    <thead>
      <th>User IDs</th>
      <th>First Names</th>
      <th>Last Names</th>
      <th>Usernames</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= link_to "Create Users", new_admin_user_path, :target => '_blank' %></p>
  <p><%= link_to "Edit users for #{@pact.pact_name}", controller: "pacts", action: "add_users", id: @pact %></p>


  <table>
    <thead>
      <th>Goal Days</th>
      <th>Penalty</th>
    </thead>
    <tbody>
      <% if @pact.penalties.present? %>
        <% @pact.penalties.each do |penalty| %>
          <tr>
            <td><%= penalty.goal_days %></td>
            <td><%= number_to_currency(penalty.penalty) %></td>
          </tr>
        <% end %>
      
      <% end %>
 
    </tbody>
  </table>
  <% if @pact.penalties.present? %>
    <p><%= link_to "Edit penalties for #{@pact.pact_name}", controller: "pacts", action: "add_penalty", id: @pact %></p>
  <% else %>
    <p>Penalties do not exist yet. <%= link_to "Add Penalty", controller: "pacts", action: "add_penalty", id: @pact  %></p>
  <% end %>

  <table>
    <thead>
      <th>User ID</th>
      <th>Pact ID</th>
      <th>Goal</th>
      <th>Goal ID</th>
      <th>Week ID / Week #</th>
    </thead>
    <tbody>
      <% @pact.goals.each do |pg| %>
        <tr>
          <td><%= pg.user_id %></td>
          <td><%= pg.pact_id %></td>
          <td><%= pg.goal %></td>
          <td><%= pg.id %></td>
