= form_for(@attachment, :html => { :multipart => true }) do |f|
  - if @attachment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attachment.errors.count, "error")} prohibited this attachment from being saved:"
      %ul
        - @attachment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :pact_id
    = f.number_field :pact_id
  .field
    = f.label :filename
    = f.file_field :filename, :multiple => true, name: "attachments[filename][]", class: "pact-upload-file"
  .actions
    = f.submit 'Save'
